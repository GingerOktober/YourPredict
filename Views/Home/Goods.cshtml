@model IEnumerable<App.Models.GoodWithFavoriteFlag>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@{
    ViewBag.Title = "Каталог";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <style>
        .cards {
            background-color: white;
            display: grid;
            grid-template-columns: repeat(auto-fill, 225px);
            width: 100%;
            justify-content: center;
            justify-items: center; /* Размещаем карточку по центру */
            column-gap: 30px; /* Отступ между колонками */
            row-gap: 40px; /* Отступ между рядами */
            display: flex; /* Используем Flexbox */
            flex-wrap: wrap; /* Разрешаем перенос элементов на следующую строку */
            justify-content: center; /* Выравниваем по центру горизонтально */
            align-items: stretch;
            margin: 70px auto;
        }
        .card {
            width: 225px;
            height: 460px;
            box-shadow: 1px 2px 4px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            border-radius: 4px;
            transition: 0.2s;
            position: relative;
            margin-top: 15px;

        }
            .card:hover {
                box-shadow: 4px 8px 16px rgba(255, 102, 51, 0.2);
            }

        .card__top {
            flex: 0 0 220px; /* Задаем высоту 220px, запрещаем расширение и сужение по высоте */
            position: relative;
            overflow: hidden; /* Скрываем, что выходит за пределы */
        }

        .favorite-button {
            position: absolute;
            top: 20px;
            right: 20px;
            cursor: pointer;
            border: none;
        }

        .heart-filled,
        .heart-empty {
            width: 40px;
            height: 40px;
            transition: transform 0.3s;
        }

        .product-card:hover .heart-filled {
            transform: scale(1.1);
        }

        .product-card:hover .heart-empty {
            transform: scale(1.1);
        }
        .card__image {
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

            .card__image > img {
                border-radius: 15px;
                width: 100%;
                height: 100%;
                object-fit: contain; /* Встраиваем картинку в контейнер card__image */
                transition: 0.2s;
            }

            /* При наведении - увеличиваем картинку */
            .card__image:hover > img {
                transform: scale(1.1);
            }

        /* Размещаем скидку на товар относительно изображения */
        .card__label {
            padding: 4px 8px;
            position: absolute;
            bottom: 10px;
            left: 10px;
            background: #ff6633;
            border-radius: 4px;
            font-weight: 400;
            font-size: 16px;
            color: #fff;
        }

        .card__bottom {
            display: flex;
            flex-direction: column;
        }

        .card__price::after {
            margin-left: 4px;
            position: relative;
        }

        .card__price--discount {
            font-weight: 700;
            font-size: 15px;
            color: #414141;
            display: flex;
            flex-wrap: wrap-reverse;
        }

        .card__price--common {
            font-weight: 400;
            font-size: 14px;
            color: #000;
            display: flex;
            flex-wrap: wrap-reverse;
            justify-content: flex-end;
        }


        .card__title {
            display: block;
            margin-bottom: 10px;
            font-weight: 400;
            font-size: 17px;
            color: #414141;
        }

            .card__title:hover {
                color: #ff6633;
            }

        .card__add {
            display: block;
            width: 100%;
            font-weight: 400;
            font-size: 17px;
            color: #271447;
            padding: 10px;
            text-align: center;
            border: 1px solid #271447;
            border-radius: 4px;
            cursor: pointer;
            margin-bottom: 10px;
        }

            .card__add:hover {
                border: 1px solid #ff6633;
                background-color: #ff6633;
                color: #fff;
            }
    </style>
    <title> Магические товары </title>
</head>
<body>
    <div class="cards">
        @foreach (var obj in Model)
        {
            var item = obj.GoodsData;
            var isFavorite = obj.IsFavorite;
            if (item.Category == "Товары")
            {
                <div class="card">
                    <div class="card__top">
                        <a href="@Url.Action("Card", new { productIndex = item.GoodId })" class="card__image">
                            <img src="@item.image_link1" alt="@item.Name" />
                        </a>
                        <div class="favorite-button">
                            @if (isFavorite)
                            {
                                <img src="https://i.ibb.co/kD6KdwS/2833-20230911015815.png" class="heart-filled" onclick="removeFromFavorites(@item.GoodId)" />
                            }
                            else
                            {
                                <img src="https://i.ibb.co/mCznMYj/2833-20230911015740.png" class="heart-empty" onclick="addToFavorites(@item.GoodId)" />
                            }
                        </div>

                        <p class="card__label">-@item.Discount%</p>
                    </div>
                    <div class="card__bottom">
                        <div class="card__prices">
                            <p>Со скидкой:</p>
                            <p class="cardprice cardprice--discount">@item.Price ₽</p>
                            <p>Обычная цена:</p>
                            <s class="cardprice cardprice--common">@item.Old_price ₽</s>
                        </div>
                        <a href="@Url.Action("Card", new {productIndex = @item.GoodId })" class="card__title">@item.Name</a>
                        <form data-goodid="@item.GoodId">
                            <button type="button" class="card__add addToCartButton">В корзину</button>
                        </form>
                    </div>
                </div>
            }
        }

    </div>

    <script>
        function addToFavorites(goodId) {
            // Создаем объект XMLHttpRequest для отправки запроса на сервер
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/Home/AddToFavorites", true);

            // Устанавливаем заголовок Content-Type для POST-запроса
            xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");

            var data = "goodId=" + goodId;

            xhr.send(data);
            location.reload();
        }

        function removeFromFavorites(goodId) {
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/Home/RemoveFromFavorites", true);

            xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");

            var data = "goodId=" + goodId;

            xhr.send(data);
            location.reload();
        }

        $('.addToCartButton').click(function () {
            var goodId = $(this).closest('form').data('goodid');
            $.ajax({
                url: '/Home/AddToCart',
                type: 'POST',
                data: { goodId: goodId },
                success: function (response) {
                    if (response.exists == 0) {
                        window.location.href = '/Home/Login';
                    } else {
                        window.location.href = '/Home/Goods';
                    }
                }
            });
        });
    </script>
</body>
</html>